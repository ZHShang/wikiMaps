  <body>
    <header>
    <% include ./partials/_header %>
  </header>
    <main>
        <!-- old maps here -->
        <section class="allmaps"></section>
        <section id="showonemap">
          <div id="map"></div>
          <button class="open-button" onclick="openForm()">Create Map</button>
          <div class="create-popup" id="myForm">
            <form action="/api/maps" id="mapInfo" method="POST">
              <h1>Save Your Map</h1>

              <label for="title"><b>Title</b></label>
              <input type="text" name="mName" placeholder="Enter a title for your map">
              <button id="save-button" type="submit" value="submit" class="btn">Save</button>
              <button type="button" class="close-button" onclick="closeForm()">Close</button>
            </form>
          </div>
          <script>
            function openForm() {
              document.getElementById("myForm").style.display = "block";
            }

            function closeForm() {
              document.getElementById("myForm").style.display = "none";
            }
          </script>
           <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBCoDvAFtM0ewkgE_CJAU6h_NDUdS8mCGg&callback=mapInit"></script>

